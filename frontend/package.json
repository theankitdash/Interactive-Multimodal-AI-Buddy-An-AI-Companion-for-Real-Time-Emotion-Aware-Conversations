{
    "name": "interactive-multimodal-ai-buddy",
    "version": "1.0.0",
    "description": "An AI Companion for Real-Time Emotion-Aware Conversations",
    "main": "dist-electron/main.js",
    "author": "theankitdash",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"vite\"",
        "dev:backend": "cd ../backend && python -m uvicorn main:app --reload --host 127.0.0.1 --port 8000",
        "dev:electron": "electron .",
        "build": "tsc && vite build",
        "build:electron": "npm run build && electron-builder",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext ts,tsx",
        "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "^40.1.0",
        "electron-builder": "^26.7.0",
        "eslint": "^9.39.2",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vite": "^7.3.1",
        "vite-plugin-electron": "^0.28.2",
        "vite-plugin-electron-renderer": "^0.14.5"
    }
}
